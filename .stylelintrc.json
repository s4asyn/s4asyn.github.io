{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extends", "tailwind"]
            }
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["composes"]
            }
        ],

        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global"]
            }
        ],
        "block-no-empty": null,
        "unit-whitelist": ["%", "rem", "s"]
    }
}
